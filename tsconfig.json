{
  "allowSyntheticDefaults": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "paths": {
      "@client/*": [
        "./client/*"
      ],
      "@i18n/*": [
        "./i18n/*"
      ],
      "@meta/*": [
        "./meta/*"
      ],
      "@server/*": [
        "./server/*"
      ],
      "@test/*": [
        "./test/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
    },
    //    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "utils",
    "client",
    "core",
    "common",
    "i18n",
    "meta",
    "server",
    "webapp",
    "test"
  ]
}
