{
  "allowSyntheticDefaults": true,
  "include": ["core", "common", "server", "webapp", "test"],

  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@core/*": ["./core/*"],
      "@common/*": ["./common/*"],
      "@server/*": ["./server/*"],
      "@webapp/*": ["./webapp/*"],
      "@test/*": ["./test/*"]
    },
    "target": "ES2019"
  }
}
