{
  "//": "This file is needed for fixing issue with imports: baseUrl is dist instead of .",
  "///": "For more info check: https://github.com/microsoft/TypeScript/issues/10866",
  "allowSyntheticDefaults": true,
  "include": ["core","common",  "i18n", "server"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "baseUrl": "./dist",
    "paths": {
      "@i18n/*": ["i18n/*"],
      "@common/*": ["common/*"],
      "@server/*": ["server/*"]
    },
    "target": "es2020",
    "lib": ["es2020", "esnext"]
  }
}
