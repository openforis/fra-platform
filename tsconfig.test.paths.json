{
  "//": "This file is needed for fixing issue with imports: baseUrl is dist instead of .",
  "///": "For more info check: https://github.com/microsoft/TypeScript/issues/10866",
  "allowSyntheticDefaults": true,
  "include": ["src", "test/integration"],
  "exclude": ["node_modules", "src/client"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "baseUrl": "./dist",
    "paths": {
      "@i18n/*": ["src/i18n/*"],
      "@meta/*": ["src/meta/*"],
      "@server/*": ["src/server/*"],
      "@test/*": ["test/*"],
      "@utils/*": ["src/utils/*"]
    },
    "target": "es2020",
    "lib": ["es2020", "esnext"]
  }
}
