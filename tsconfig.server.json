{
  "allowSyntheticDefaults": true,
  "include": ["src"],
  "exclude": ["node_modules", "src/client", "src/test"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "es2020",
    "lib": ["es2020", "esnext", "dom"]
  }
}
