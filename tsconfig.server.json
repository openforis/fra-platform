{
  "allowSyntheticDefaults": true,
  "include": ["core", "common",  "i18n", "server"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@i18n/*": ["i18n/*"],
      "@common/*": ["common/*"],
      "@server/*": ["server/*"]
    },
    "target": "es2020",
    "lib": ["es2020", "esnext"]
  }
}
